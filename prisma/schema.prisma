generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    surname   String
    username  String   @unique
    email     String   @unique
    phone     String
    password  String
    role      Role     @default(customer)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

enum Role {
    customer
    admin
    partner
}
